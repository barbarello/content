<def-group>
  <definition class="inventory" id="installed_OS_is_amazonlinux2" version="3">
    <metadata>
      <title>Amazonlinux 2</title>
      <affected family="unix">
        <platform>multi_platform_all</platform>
      </affected>
      <reference ref_id="cpe:/o:amazonlinux:2" source="CPE" />
      <description>The operating system installed on the system is Amazon Linux 2</description>
    </metadata>
    <criteria comment="current OS is 2" operator="AND">
      <extend_definition comment="Installed OS is part of the Unix family" definition_ref="installed_OS_is_part_of_Unix_family" />
      <criterion comment="Amazonlinux is installed" test_ref="test_amazonlinux" />
      <criterion comment="Amazonlinux 2 is installed" test_ref="test_amazonlinux2" />
    </criteria>
  </definition>

  <ind:textfilecontent54_test check="all" check_existence="at_least_one_exists" comment="Check os-release ID" id="test_amazonlinux" version="1">
    <ind:object object_ref="obj_name_amazonlinux" />
    <ind:state state_ref="state_name_amazonlinux" />
  </ind:textfilecontent54_test>
  <ind:textfilecontent54_object id="obj_name_amazonlinux" version="1" comment="Check os-release ID">
    <ind:filepath>/etc/os-release</ind:filepath>
    <ind:pattern operation="pattern match">^ID=\"(\w+)\"$</ind:pattern>
    <ind:instance datatype="int">1</ind:instance>
  </ind:textfilecontent54_object>
  <ind:textfilecontent54_state id="state_name_amazonlinux" version="1">
    <ind:subexpression>amzn</ind:subexpression>
  </ind:textfilecontent54_state>
  <ind:textfilecontent54_test check="all" comment="Check os-release VERSION_ID" id="test_amazonlinux2" version="1">
    <ind:object object_ref="obj_version_amazonlinux2" />
    <ind:state state_ref="state_version_amazonlinux2" />
  </ind:textfilecontent54_test>
  <ind:textfilecontent54_object id="obj_version_amazonlinux2" version="1" comment="Check os-release VERSION_ID">
    <ind:filepath>/etc/os-release</ind:filepath>
    <ind:pattern operation="pattern match">^VERSION_ID=\"(\w+)\"$</ind:pattern>
    <ind:instance datatype="int">1</ind:instance>
  </ind:textfilecontent54_object>
  <ind:textfilecontent54_state id="state_version_amazonlinux2" version="1">
    <ind:subexpression>2</ind:subexpression>
  </ind:textfilecontent54_state>

</def-group>
